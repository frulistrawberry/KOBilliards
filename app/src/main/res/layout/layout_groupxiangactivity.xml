<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@color/white"
          >
          <ImageView
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:src="@mipmap/timg"
              android:layout_marginLeft="18dp"
              android:layout_marginTop="1dp"
              />
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="10dp"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#000000"
                  android:textSize="16dp"
                  android:text="群名称"
                  android:layout_marginTop="8dp"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#656565"
                  android:textSize="12dp"
                  android:text="用户昵称  于2019/08/21创建"
                  android:layout_marginTop="3dp"
                  />
          </LinearLayout>
      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            >
            <LinearLayout
                android:id="@+id/qun_chengyuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="群成员"
                    android:textColor="#656565"
                    android:layout_marginTop="10dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:id="@+id/qun_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="群名称"
                    android:textColor="#656565"
                    android:textSize="14dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginBottom="5dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一个神奇的群"
                    android:textColor="#A0A0A0"
                    android:textSize="14dp"
                    android:layout_marginBottom="5dp"
                    />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="18dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qun_nicheng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="群昵称"
                    android:textColor="#656565"
                    android:textSize="14dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginBottom="5dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一个神经的人"
                    android:textColor="#A0A0A0"
                    android:textSize="14dp"
                    android:layout_marginBottom="5dp"
                    />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="18dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qun_jieshao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="群介绍"
                    android:textColor="#656565"
                    android:textSize="14dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginBottom="5dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击填写群介绍"
                    android:textColor="#A0A0A0"
                    android:textSize="14dp"
                    android:layout_marginBottom="5dp"
                    />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="18dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/quan_gonggao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="群公告"
                    android:textColor="#656565"
                    android:textSize="14dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginBottom="5dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击查看群公告"
                    android:textColor="#A0A0A0"
                    android:textSize="14dp"
                    android:layout_marginBottom="5dp"
                    />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="18dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息提醒"
                    android:textColor="#656565"
                    android:textSize="14dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginBottom="5dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提醒所有消息"
                    android:textColor="#A0A0A0"
                    android:textSize="14dp"
                    android:layout_marginBottom="5dp"
                    />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="18dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聊天置顶"
                    android:textColor="#656565"
                    android:textSize="14dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginBottom="5dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <CheckBox
                    android:id="@+id/switch_checkbox_message1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:checked="true"
                    android:layout_marginRight="18dp"
                    android:button="@drawable/switch_checkbox_bg"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/yanzhen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份验证"
                android:textColor="#656565"
                android:textSize="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="5dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许任何人"
                android:textColor="#A0A0A0"
                android:textSize="14dp"
                android:layout_marginBottom="5dp"
                />
            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:src="@mipmap/ic_arrow_right"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="18dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/yaoqing_qunxian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请他人权限"
                android:textColor="#656565"
                android:textSize="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="5dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理员"
                android:textColor="#A0A0A0"
                android:textSize="14dp"
                android:layout_marginBottom="5dp"
                />
            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:src="@mipmap/ic_arrow_right"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="18dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/xiugai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群资料修改权限"
                android:textColor="#656565"
                android:textSize="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="5dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理员"
                android:textColor="#A0A0A0"
                android:textSize="14dp"
                android:layout_marginBottom="5dp"
                />
            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:src="@mipmap/ic_arrow_right"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="18dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shenfen_yanzheng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="被邀请人身份验证"
                android:textColor="#656565"
                android:textSize="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="5dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需要验证"
                android:textColor="#A0A0A0"
                android:textSize="14dp"
                android:layout_marginBottom="5dp"
                />
            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:src="@mipmap/ic_arrow_right"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="18dp"
                />
        </LinearLayout>


        <com.yuyuka.billiards.widget.StateButton
            android:id="@+id/btn_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:unClickableColor="#FA6262"
            app:RoundedConnerRadius="6dp"
            app:normalColor="#FA6262"
            app:pressColor="#FA6262"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="解散群聊"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginRight="13dp"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>
