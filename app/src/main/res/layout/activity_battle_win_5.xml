<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:background="@mipmap/bg_battle">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/v_status"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/iv_title_left"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:src="@mipmap/icon_back_white"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:text="排位赛结算"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="114dp"
            android:layout_height="95dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/dashi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="大师一段"/>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/bg_seek_bar_xinshou_5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/fl_1"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@mipmap/yeyu_1"
            android:padding="13dp">

            <FrameLayout
                android:id="@+id/fl_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/yeyu_2"
                android:padding="1dp"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/fl_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/huangkuang"
                    android:padding="10dp"
                    android:visibility="visible">

                    <FrameLayout
                        android:id="@+id/fl_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/huangying"
                        android:padding="4dp"
                        android:visibility="visible">
                        <FrameLayout
                            android:id="@+id/fl_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/yeyu_2">
                            <RelativeLayout
                                android:id="@+id/rl_duijujiesuan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/btn_xiangxishuju"
                                    android:layout_width="43dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="8sp"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center"
                                    android:text="详细数据"
                                    android:background="@drawable/bg_xinshou_xiangxishuju"/>
                                <ImageView
                                    android:id="@+id/iv_result"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@mipmap/shengli"/>
                                <LinearLayout
                                    android:id="@+id/ll_zhanli"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerInParent="true"
                                    android:background="#720F10">
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:scaleType="centerCrop"
                                        android:src="@mipmap/img_coach_land"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="10dp"

                                        android:paddingBottom="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="距离京战力"
                                            android:textColor="@color/white"
                                            android:textSize="8sp" />

                                        <ProgressBar
                                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="12dp"
                                            android:layout_marginTop="3dp"
                                            android:max="100"
                                            android:progress="50"
                                            android:progressDrawable="@drawable/bg_seek_bar_xinshou_zhanli_1" />
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="12dp"
                                            android:layout_marginTop="3dp"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="10dp"
                                            android:paddingRight="10dp"
                                            android:orientation="horizontal"
                                            android:background="@color/white">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/text_color_1"
                                                android:textSize="8sp"
                                                android:text="8800兆3248亿战斗力"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#0FC408"
                                                android:layout_marginLeft="10dp"
                                                android:textSize="8sp"
                                                android:drawablePadding="2dp"
                                                android:drawableLeft="@mipmap/jiantoulv"
                                                android:text="8800兆3248亿战斗力"/>
                                        </LinearLayout>


                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_shuju"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/ll_zhanli"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="15dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:text="胜局"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:text="连胜"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:text="总计"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/ll_shuju"
                                    android:orientation="horizontal"
                                    android:background="#720F10"
                                    android:layout_marginTop="7dp">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:text="+36"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:text="+4"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:text="+40"/>


                                </LinearLayout>


                            </RelativeLayout>
                            <RelativeLayout
                                android:visibility="gone"
                                android:id="@+id/rl_xiangxishuju"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="25dp">
                                <TextView
                                    android:id="@+id/btn_duijujiesuan"
                                    android:layout_width="43dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="8sp"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center"
                                    android:text="对局结算"
                                    android:background="@drawable/bg_xinshou_xiangxishuju"/>
                                <TextView
                                    android:id="@+id/benchangshuju"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:text="本场数据"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_alignParentBottom="true"
                                    android:orientation="horizontal">
                                    <com.github.mikephil.charting.charts.RadarChart
                                        android:id="@+id/chart"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        />
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="1dp"
                                        android:layout_weight="1"/>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/white"
                                            android:textSize="12sp"
                                            android:text="VRT"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/white"
                                            android:textSize="12sp"
                                            android:layout_marginTop="5dp"
                                            android:text="攻击力"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/white"
                                            android:textSize="12sp"
                                            android:layout_marginTop="5dp"

                                            android:text="防御力"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/white"
                                            android:textSize="12sp"
                                            android:layout_marginTop="5dp"

                                            android:text="得分比"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/white"
                                            android:layout_marginTop="5dp"

                                            android:textSize="12sp"
                                            android:text="局长"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#FCE700"
                                            android:textSize="12sp"
                                            android:text="VRT"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#FCE700"
                                            android:textSize="12sp"
                                            android:layout_marginTop="5dp"
                                            android:text="攻击力"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#FCE700"
                                            android:textSize="12sp"
                                            android:layout_marginTop="5dp"

                                            android:text="防御力"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#FCE700"
                                            android:textSize="12sp"
                                            android:layout_marginTop="5dp"

                                            android:text="得分比"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#FCE700"
                                            android:layout_marginTop="5dp"

                                            android:textSize="12sp"
                                            android:text="局长"/>
                                    </LinearLayout>

                                </LinearLayout>







                            </RelativeLayout>



                        </FrameLayout>


                    </FrameLayout>

                </FrameLayout>

            </FrameLayout>

        </FrameLayout>

        <com.yuyuka.billiards.widget.StateButton
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            app:RoundedConnerRadius="4dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="返回"
            android:gravity="center"
            app:normalColor="#DD494C"
            app:pressColor="#DD494C"
            app:unClickableColor="#DD494C"/>


    </LinearLayout>



</FrameLayout>