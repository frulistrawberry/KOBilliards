<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:are="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:singleLine="true"
        android:textSize="18sp"
        android:hint="标题"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.chinalwb.are.AREditText
                android:id="@+id/areditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                are:expandMode="FULL"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                are:hideToolbar="true"
                android:hint="正文"
                android:textSize="18sp"
                />
        </ScrollView>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:background="@drawable/bg_location"
        android:padding="2dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="所在位置"
        android:drawablePadding="2dp"
        android:drawableLeft="@mipmap/ic_location_yellow"
        android:textColor="@color/text_color_15"
        />

    <com.yuyuka.billiards.widget.TagLayout
        android:id="@+id/tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp">

    </com.yuyuka.billiards.widget.TagLayout>
    <com.yuyuka.billiards.widget.richtext.LinearToolBar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>