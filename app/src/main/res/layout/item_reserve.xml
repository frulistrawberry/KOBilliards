<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_room_cover"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/text_color_1"
                android:text="星牌比赛球台"/>
            <TextView
                android:id="@+id/tv_goods_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无摆球"
                android:textSize="12sp"
                android:textColor="@color/text_color_3" />
            <TextView
                android:id="@+id/tv_protion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠时段12 ：00~16 ：00\n优惠时段25元/小时"
                android:textSize="12sp"
                android:textColor="@color/text_color_5" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_6"
                android:textSize="14sp"
                android:text="￥42"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/text_color_1"
                android:text="元/小时"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_btn_reserve">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="预定"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:textColor="@color/text_color_6"
                android:text="在线付"
                android:background="@drawable/bg_pay_online"/>

        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/v_place"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:visibility="invisible"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="@color/text_color_6"
            android:text="仅剩2桌"/>
    </FrameLayout>


</RelativeLayout>