<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:background="@mipmap/bg_battle">
    <View
        android:id="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_back_white"
                android:visibility="visible" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_table_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxEms="7"
                    android:ellipsize="end"
                    android:textSize="18dp"
                    android:text="开台方式"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </RelativeLayout>
        <View
            android:id="@+id/v_title_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:background="@color/color_spline"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_mode1"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@drawable/bg_battle_stack"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="百盛台球馆会员卡"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="没有会员卡"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_check1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/ic_check_unslected"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_mode2"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@drawable/bg_battle_stack"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="临时押金卡"
                />
            <TextView
                android:id="@+id/tv_deoisit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="需要押金:100元"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_check2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/ic_check_select"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_mode3"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@drawable/bg_battle_stack"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="百盛台球馆会员卡"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="没有会员卡"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_check3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/ic_check_unslected"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.yuyuka.billiards.widget.StateButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        app:RoundedConnerRadius="4dp"
        android:textSize="18sp"
        android:text="去支付"
        app:normalColor="#71BAEB"
        app:pressColor="#71BAEB"
        />




</LinearLayout>