<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="哈哈哈哈哈哈哈哈哈"
        android:textColor="#656565"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corners"
        android:layout_marginLeft="15dp"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:padding="10dp"
        android:textSize="14dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="30dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/layout_double"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/bg_alert_left_selector"
            android:gravity="center"
            android:textColor="@color/text_color_4"
            android:textSize="14dp" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="0.5dp"
            android:layout_height="44dp"
            android:background="#e3e7ed" />

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/bg_alert_right_selector"
            android:gravity="center"
            android:textColor="@color/text_color_7"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>
