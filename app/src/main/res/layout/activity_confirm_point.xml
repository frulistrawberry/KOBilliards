<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bg_battle">
    <View
        android:id="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/iv_title_left"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back_white"
            android:visibility="visible" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:maxEms="7"
                android:ellipsize="end"
                android:textSize="18dp"
                android:text="对战结束"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </RelativeLayout>

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_battle_stack"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/iv_head_user1"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_coach_land"/>
            <TextView
                android:id="@+id/tv_user_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/text_color_6"
                android:layout_marginTop="5dp"
                android:text="用户昵称"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:text="业余一段"
                    android:background="@drawable/bg_user_tag"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:text="标签"
                    android:background="@drawable/bg_user_tag"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:text="标签"
                    android:background="@drawable/bg_user_tag"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_point_win"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_point_win"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_point_lose"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_point_lose"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_point_lose"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_table"
            android:gravity="center"
            android:minHeight="75dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="比分"/>
            <TextView
                android:id="@+id/tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="00:00"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/end_battle"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ll_table"
            android:layout_marginTop="-10dp"
            android:src="@mipmap/ic_battle_failure"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_head_user2"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_coach_land"/>
            <TextView
                android:id="@+id/tv_user_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/text_color_6"
                android:layout_marginTop="5dp"
                android:text="用户昵称"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:text="业余一段"
                    android:background="@drawable/bg_user_tag"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:text="标签"
                    android:background="@drawable/bg_user_tag"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:text="标签"
                    android:background="@drawable/bg_user_tag"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_point_win"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_point_win"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_point_lose"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_point_lose"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_point_lose"/>

            </LinearLayout>




        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:orientation="horizontal">

        <com.yuyuka.billiards.widget.StateButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            app:RoundedConnerRadius="4dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="取消"
            android:gravity="center"
            app:normalColor="#B7B7B7"
            app:pressColor="#B7B7B7"
            app:unClickableColor="#B7B7B7"/>

        <com.yuyuka.billiards.widget.StateButton
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:layout_height="40dp"
            app:RoundedConnerRadius="4dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="确认比分"
            android:gravity="center"
            app:normalColor="#2493EB"
            app:pressColor="#2493EB"
            app:unClickableColor="#2493EB"/>


    </LinearLayout>

</LinearLayout>