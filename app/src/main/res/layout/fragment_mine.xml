                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_6"
                            android:textSize="18sp"
                            android:text="7"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_1"
                            android:textSize="14sp"
                            android:text="击败对手"/>
                        <TextView
                            android:id="@+id/jibaiduishou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_6"
                            android:textSize="18sp"
                            android:text="7"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_1"
                            android:textSize="14sp"
                            android:text="打败过我"/>
                        <TextView
                            android:id="@+id/dabaiguowo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_6"
                            android:textSize="18sp"
                            android:text="7"/>


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#707070"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:background="#F4F4F4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="系统评估：您的数据不足"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/wodedingdan"
                    android:drawablePadding="5dp"
                    android:text="我的订单"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/wodeshoucang"
                    android:drawablePadding="5dp"
                    android:text="我的收藏"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/wodechengjiu"
                    android:drawablePadding="5dp"
                    android:text="我的成就"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/shejiaomingpian"
                    android:drawablePadding="5dp"
                    android:text="社交名片"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/haoyou"
                    android:drawablePadding="5dp"
                    android:text="我的好友"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/wodequnzu"
