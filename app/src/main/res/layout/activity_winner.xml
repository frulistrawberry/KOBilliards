<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:background="@mipmap/bg_battle">
    <View
        android:id="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/iv_title_left"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back_white"
            android:visibility="visible" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:maxEms="7"
                android:ellipsize="end"
                android:textSize="18dp"
                android:text="对战结束"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </RelativeLayout>

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:background="@drawable/bg_battle_stack">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_6"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:text="请填写对手比分：2"/>
        <LinearLayout
            android:id="@+id/ll_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="0"
                    android:background="@drawable/bg_point_un_select"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="1"
                    android:background="@drawable/bg_point_un_select"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="2"
                    android:background="@drawable/bg_point_un_select"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="3"
                    android:background="@drawable/bg_point_un_select"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@color/text_color_1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="4"
                    android:background="@drawable/bg_point_un_select"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.yuyuka.billiards.widget.StateButton
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:RoundedConnerRadius="4dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="发送比分"
        android:gravity="center"
        app:normalColor="#2493EB"
        app:pressColor="#2493EB"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        app:unClickableColor="#2493EB"/>

</LinearLayout>