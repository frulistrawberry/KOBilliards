<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_battle">

    <View
        android:id="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/iv_title_left"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back_white"
            android:visibility="visible" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:maxEms="7"
                android:ellipsize="end"
                android:textSize="18dp"
                android:text="对战结束"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@+id/v_title_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/color_spline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="54dp"
        android:paddingTop="54dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_battle_stack">
            <TextView
                android:id="@+id/tv_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_6"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"
                android:text="胜利"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_win"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_color_6"
                android:textSize="14sp"
                android:text="Victory"/>
            <ImageView
                android:id="@+id/btn_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_battle_end_win"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_6"
                android:textSize="14sp"
                android:text="去设置比分"/>
            


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:background="@drawable/bg_battle_stack">
            <TextView
                android:id="@+id/tv_lose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_6"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"
                android:text="失败"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_lose"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_color_6"
                android:textSize="14sp"
                android:text="Failure"/>
            <ImageView
                android:id="@+id/btn_lose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_battle_end_lose"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/text_color_6"
                android:textSize="14sp"
                android:text="扫码查看比分"/>



        </LinearLayout>

    </LinearLayout>




</LinearLayout>