<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总体"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:layout_gravity="center"
                        />
                    <com.yuyuka.billiards.utils.RatingBar
                        android:id="@+id/rb_total"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starEmpty="@mipmap/starhui"
                        app:starFill="@mipmap/star"
                        app:starImageSize="32dp"
                        app:starPadding="10dp"
                        app:starStep="1"
                        app:mode="single"
                        app:stepSize="Full"/>

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="不佳"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="位置"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:layout_gravity="center"
                        />
                    <com.yuyuka.billiards.utils.RatingBar
                        android:id="@+id/rb_location"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starEmpty="@mipmap/sorry"
                        app:starFill="@mipmap/sorryl"
                        app:starImageSize="32dp"
                        app:starPadding="10dp"
                        app:starStep="1"
                        app:mode="multi"
                        app:stepSize="Full"/>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="不佳"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:layout_gravity="center"
                        />
                    <com.yuyuka.billiards.utils.RatingBar
                        android:id="@+id/rb_service"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starEmpty="@mipmap/sorry"
                        app:starFill="@mipmap/sorryl"
                        app:starImageSize="32dp"
                        app:starPadding="10dp"
                        app:starStep="1"
                        app:mode="multi"
                        app:stepSize="Full"/>

                    <TextView
                        android:id="@+id/tv_service"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="不佳"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卫生"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:layout_gravity="center"
                        />
                    <com.yuyuka.billiards.utils.RatingBar
                        android:id="@+id/rb_hygiene"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starEmpty="@mipmap/sorry"
                        app:starFill="@mipmap/sorryl"
                        app:starImageSize="32dp"
                        app:starPadding="10dp"
                        app:starStep="1"
                        app:mode="multi"
                        app:stepSize="Full"/>

                    <TextView
                        android:id="@+id/tv_hygiene"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="不佳"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设施"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:layout_gravity="center"
                        />
                    <com.yuyuka.billiards.utils.RatingBar
                        android:id="@+id/rb_facilities"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starEmpty="@mipmap/sorry"
                        app:starFill="@mipmap/sorryl"
                        app:starImageSize="32dp"
                        app:starPadding="10dp"
                        app:starStep="1"
                        app:mode="multi"
                        app:stepSize="Full"/>

                    <TextView
                        android:id="@+id/tv_facilities"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="不佳"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_1"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/color_spline"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游玩类型"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_1"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="7dp"
                    />

                <com.yuyuka.billiards.widget.TagLayout
                    android:id="@+id/tag_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_tag_comment_negative"
                        android:gravity="center"
                        android:text="朋友约球"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_tag_comment_negative"
                        android:gravity="center"
                        android:text="情侣约会"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_tag_comment_negative"
                        android:gravity="center"
                        android:text="独自打球"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_tag_comment_negative"
                        android:gravity="center"
                        android:text="无聊消遣"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_tag_comment_negative"
                        android:gravity="center"
                        android:text="大伙娱乐"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_tag_comment_negative"
                        android:gravity="center"
                        android:text="孤独练球"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_tag_comment_negative"
                        android:gravity="center"
                        android:text="其他"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </com.yuyuka.billiards.widget.TagLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/color_spline"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="给球房的留言"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_1"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="7dp"
                    />
                <EditText
                    android:id="@+id/et_advice_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:padding="10dp"
                    android:background="@drawable/edit_bg"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.yuyuka.billiards.widget.StateButton
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textColor="@color/white"
        app:normalColor="@color/text_color_6"
        app:pressColor="@color/text_color_6"
        app:unClickableColor="@color/text_color_6"
        app:RoundedConnerRadius="4dp"
        android:text="确定"
        android:layout_marginBottom="10dp"
        />
</FrameLayout>
