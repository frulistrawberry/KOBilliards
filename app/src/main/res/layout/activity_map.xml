<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.amap.api.maps.TextureMapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/ll_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color_1"
            android:text="我的位置:德鑫家园"/>
        <View
            android:layout_width="10dp"
            android:layout_height="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color_1"
            android:text="球房位置:丰台区南庭新苑南区底商250号"/>


    </LinearLayout>

    <com.yuyuka.billiards.widget.StateButton
        android:id="@+id/btn_guide"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:unClickableColor="@color/text_color_3"
        app:RoundedConnerRadius="20dp"
        app:normalColor="@color/text_color_6"
        app:pressColor="@color/text_color_6"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        android:text="使用其他地图导航"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginRight="40dp"/>

</FrameLayout>