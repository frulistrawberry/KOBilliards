<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="百胜桌球馆"
       android:textColor="#656565"
       android:textSize="18dp"
       android:layout_gravity="center"
       android:layout_marginTop="21dp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统点单"
        android:textSize="18dp"
        android:textColor="#656565"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥100"
        android:textSize="40dp"
        android:textColor="#F1A82A"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="42dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textColor="#656565"
            android:textSize="18dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dui"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="42dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textColor="#656565"
            android:textSize="18dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/quan"
            android:layout_marginLeft="58dp"
            />
    </LinearLayout>

    <com.yuyuka.billiards.widget.StateButton
        android:id="@+id/tijiao"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:normalColor="#1DB710"
        app:unClickableColor="#1DB710"
        app:pressColor="#1DB710"
        app:RoundedConnerRadius="6dp"
        android:textColor="@color/white"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:textSize="18dp"
        android:text="提交"
        android:layout_marginTop="200dp"
        android:gravity="center"
        />

</LinearLayout>
