<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <com.yuyuka.billiards.widget.video.EmptyControlVideo
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/ic_nearby_room_back"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/discuss_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="写评论..."
            android:textColor="@color/text_color_16"
            android:cursorVisible="false"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:layout_alignParentBottom="true"
            android:drawablePadding="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp" android:drawableLeft="@mipmap/ic_news_info_bi"
            android:background="@drawable/bg_small_video_comment"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/discuss_tv"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_coach"/>
            <TextView
                android:id="@+id/btn_attention"
                android:layout_width="43dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/bg_news_attention_orange"
                android:text="关注"/>
            <TextView
                android:id="@+id/btn_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:layout_marginTop="30dp"
                android:drawableTop="@mipmap/ic_zan_small_video"
                android:textColor="@color/white"
                android:text="3237"/>
            <TextView
                android:id="@+id/btn_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/ic_comment_small_video"
                android:textColor="@color/white"
                android:text="3457"/>
            <TextView
                android:id="@+id/btn_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/ic_collect_small_video"
                android:textColor="@color/white"
                android:text="收藏"/>
            <TextView
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/ic_share_small_video"
                android:textColor="@color/white"
                android:text="分享"/>

        </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/layout_container"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="465dp"/>


</FrameLayout>