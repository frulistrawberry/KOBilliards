<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:paddingRight="20dp"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_search"
                    android:digits="1234567890"
                    android:gravity="center"
                    android:hint="最低价"
                    android:inputType="number"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp" />

                <EditText
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_search"
                    android:digits="1234567890"
                    android:gravity="center"
                    android:hint="最高价"
                    android:inputType="number"
                    android:textColor="@color/text_color_1"
                    android:textSize="12sp" />

                <View
                    android:layout_width="18dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/text_color_1" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="价格"
                android:textColor="@color/text_color_1"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快捷筛选"
                android:textColor="@color/text_color_1"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="发布时间"
                android:textColor="@color/text_color_1"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="其他"
                android:textColor="@color/text_color_1"
                android:textSize="12sp" />

            <com.yuyuka.billiards.widget.TagLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="34dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:background="@drawable/selector_tag"
                    android:gravity="center"
                    android:text="1天内"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/selector_tag"
                    android:gravity="center"
                    android:text="7天内"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/selector_tag"
                    android:gravity="center"
                    android:text="14天内"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_tag"
                    android:gravity="center"
                    android:text="30天内"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </com.yuyuka.billiards.widget.TagLayout>

            <com.yuyuka.billiards.widget.TagLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:background="@drawable/selector_tag"
                    android:gravity="center"
                    android:text="全新"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/selector_tag"
                    android:gravity="center"
                    android:text="实拍"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/selector_tag"
                    android:gravity="center"
                    android:text="支持验货"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </com.yuyuka.billiards.widget.TagLayout>

            <com.yuyuka.billiards.widget.TagLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:background="@drawable/selector_tag"
                    android:gravity="center"
                    android:text="免费送"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/selector_tag"
                    android:gravity="center"
                    android:text="包路费"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/selector_tag"
                    android:gravity="center"
                    android:text="自提"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </com.yuyuka.billiards.widget.TagLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <com.yuyuka.billiards.widget.StateButton
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/text_color_1"
            android:gravity="center"
            android:layout_weight="2"
            app:normalColor="@color/white"
            app:pressColor="@color/white"
            app:unClickableColor="@color/white"
            android:text="重置"/>


        <com.yuyuka.billiards.widget.StateButton
            android:id="@+id/btn_complete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="3"
            app:normalColor="@color/text_color_6"
            app:pressColor="@color/text_color_6"
            app:unClickableColor="@color/text_color_6"
            android:text="确定"/>

    </LinearLayout>
</LinearLayout>