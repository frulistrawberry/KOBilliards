<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/toolbar_close"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_title_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"/>
        <TextView
            android:id="@+id/tv_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="100条评论"
            android:textColor="@color/text_color_1"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
    <include
        layout="@layout/include_ptr_recycler"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_spline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:focusable="true"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_gravity="bottom"
        android:focusableInTouchMode="true">
        <TextView
            android:visibility="visible"
            android:id="@+id/discuss_tv1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="写评论..."
            android:textColor="@color/text_color_16"
            android:cursorVisible="false"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/ic_news_info_bi"
            android:background="@drawable/bg_search"/>
    </LinearLayout>


</LinearLayout>