<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="498dp"
        android:orientation="vertical"
        android:background="@drawable/bg_white_corners"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="楚秉杰"
            android:textColor="#656565"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前段位"
                    android:textColor="#656565"
                    android:textSize="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xinshou"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大师20星"
                    android:textColor="#F1A82A"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="100dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史最高"
                    android:textColor="#656565"
                    android:textSize="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dashi"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大师20星"
                    android:textColor="#F1A82A"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近三场比赛状态"
            android:textColor="#656565"
            android:textSize="14dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            />
        <include layout="@layout/include_ptr_recycler"/>
        <com.yuyuka.billiards.widget.StateButton
            android:id="@+id/btn_next"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            app:normalColor="#F1A82A"
            app:pressColor="#F1A82A"
            android:layout_marginBottom="5dp"
            app:unClickableColor="@color/white"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            app:RoundedConnerRadius="5dp"
            android:textSize="18dp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/ic_clean"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        />
</LinearLayout>
