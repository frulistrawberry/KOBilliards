<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bg_battle">
    <View
        android:id="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_back_white"
                android:visibility="visible" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxEms="7"
                    android:ellipsize="end"
                    android:textSize="18dp"
                    android:text="面对面排位赛"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:id="@+id/iv_title_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_face_to_face_help"
                    />

            </LinearLayout>

        </RelativeLayout>
        <View
            android:id="@+id/v_title_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:background="@color/color_spline"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_scan"
        android:padding="5dp"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/battletype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="扫码加入面对面排位赛约局"/>

    <TextView
        android:id="@+id/battlename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:text="排位赛抢5\n中式八球（赛规）"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.yuyuka.billiards.widget.StateButton
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:RoundedConnerRadius="4dp"
        app:pressColor="@color/text_color_6"
        app:normalColor="@color/text_color_6"
        app:unClickableColor="@color/text_color_6"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="取消等待"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="17dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="13dp"
            android:paddingTop="10dp"
            android:paddingLeft="13dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:background="#55000000"
            android:orientation="vertical">


        </LinearLayout>

    </ScrollView>




</LinearLayout>