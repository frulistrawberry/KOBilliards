<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/toolbar_close"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:visibility="visible">
        <TextView
            android:id="@+id/btn_attention"
            android:layout_width="43dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/bg_news_attention_orange"
            android:text="关注"/>
        <ImageView
            android:id="@+id/iv_head_image_add_title"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_head_image_add_title"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_color_1"/>
            <TextView
                android:id="@+id/tv_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_15"
                android:text="4719万粉丝"
                android:textSize="12sp"/>
        </LinearLayout>

    </RelativeLayout>
    <include
        layout="@layout/include_ptr_recycler"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_spline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:focusable="true"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_gravity="bottom"
        android:focusableInTouchMode="true">
        <TextView
            android:visibility="visible"
            android:id="@+id/discuss_tv1"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:text="写评论..."
            android:textColor="@color/text_color_16"
            android:cursorVisible="false"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/ic_news_info_bi"
            android:background="@drawable/bg_search"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/btn_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_news_info_comment"/>
                    <TextView
                        android:visibility="gone"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_comment_count"/>
                </RelativeLayout>
            </LinearLayout>



            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_news_info_collect"/>
            <ImageView
                android:id="@+id/btn_zan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_news_info_zan"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_news_info_share"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>